<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/more_relative_media"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent" >

    <TextView
        android:id="@+id/more_relative_media_text"
        style="@style/more_button_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/media_content_item_pading_vertical"
        android:layout_marginRight="@dimen/media_content_item_pading_vertical"
        android:gravity="left|center_vertical"
        android:text="@string/more_suggestion" />

    <View
        android:id="@+id/end_view"
        android:layout_below="@id/more_relative_media_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/media_content_item_pading_vertical"
        android:background="@android:color/transparent" />

</RelativeLayout>